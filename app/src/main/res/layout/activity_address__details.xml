<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sambal.mmuadmission.Address_Details">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Address Details"
        android:textSize="20dp"
        android:id="@+id/tv_adress_details"
        android:background="@android:color/holo_green_light"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adress Line 1:"
        android:id="@+id/tv_addressline1"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/tv_adress_details"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_addressline1"
        android:layout_alignBottom="@+id/tv_addressline1"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/tv_addressline1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adress Line 2:"
        android:id="@+id/tv_addressline2"
        android:layout_alignBottom="@+id/editText_addressline2"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_addressline2"
        android:layout_below="@+id/editText_addressline1"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/tv_addressline1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_city"
        android:layout_below="@+id/editText_addressline2"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/tv_addressline2"
        android:layout_alignStart="@+id/editText_pincode" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City:"
        android:id="@+id/tv_city"
        android:layout_alignBottom="@+id/editText_city"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_state"
        android:layout_below="@+id/tv_city"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/tv_city"
        android:layout_alignStart="@+id/editText_country" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_country"
        android:layout_below="@+id/editText_state"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/tv_country" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_pincode"
        android:layout_below="@+id/editText_country"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/tv_pincode" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="State:"
        android:id="@+id/tv_state"
        android:layout_above="@+id/editText_country"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Country:"
        android:id="@+id/tv_country"
        android:layout_alignBottom="@+id/editText_country"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pin Code:"
        android:id="@+id/tv_pincode"
        android:layout_alignBottom="@+id/editText_pincode"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEXT"
        android:textSize="20dp"
        android:id="@+id/btn_goto_academic_details"
        android:background="@android:color/holo_green_light"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />



</RelativeLayout>
